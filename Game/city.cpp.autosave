void City::addStop(std::shared_ptr<Interface::IStop> stop)
{
    Interface::Location stopLoc = stop->getLocation();
    ui_->addActor(stopLoc.giveX(), 500-stopLoc.giveY(), 1);
    stops_.push_back(stop);
}

