void City::addActor(std::shared_ptr<Interface::IActor> newactor)
{
    Interface::Location actorLoc = newactor->giveLocation();
    ui_->addActor(actorLoc.giveX(), 500-actorLoc.giveY(), 2);
    actors_.push_back(newactor);
}

